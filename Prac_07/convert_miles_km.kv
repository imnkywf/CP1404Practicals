BoxLayout:
    orientation:"vertical"

    BoxLayout:
        orientation:"horizontal"
        TextInput:
            id: input_number
            text: '34'

        BoxLayout:
            orientation:'vertical'
            size_hint_x:0.5
            Button:
                text:'Up'
                on_press:app.handle_change(1)

            Button:
                text:'Down'
                on_press:app.handle_change(-1)


    Button:
        text: 'Convert mile to km'
        on_press: app.handle_calculation(int(input_number.text))
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)


